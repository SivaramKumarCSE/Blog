---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import NavBar from '../components/NavBar.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';



const blogs = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class=" flex flex-col h-screen items-center  ">
		
		<div class=" items-center justify-center gap-10 max-w-2xl">
			<NavBar/>

		
		<engineer class=" w-full text-7xl font-medium tracking-tight ">Hey iâ€™m sivaram , designer, engineer & developer</h1>

			{
				blogs.map((blog)=>
					<BlogCard title={blog.data.title} date={blog.data.pubDate} slug={blog.slug}/>
				)
			}
		
		<!-- // <BlogCard title="Embracing Minimalism in Design" date="2024/3/2"/> -->
		</div>
	</body>
</html>
